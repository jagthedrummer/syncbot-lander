<div class="prose">
  <h1>Changelog</h1>
  <p>&nbsp;</p>
</div>
<% blog.articles.each do |article| %>
  <div class="mb-8">
    <div class="flex items-center focus:outline-none">
      <svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path></svg>

      <h1 class="mx-4 text-xl text-gray-700 dark:text-white"><%= article.title %></h1>
      <h2><time><%= article.date.strftime('%b %e %Y') %></time></h2>
    </div>

    <div class="flex mt-4 md:mx-10">
      <span class="border border-emerald-500"></span>

      <div class="max-w-3xl px-4 text-gray-500 dark:text-gray-300">
        <div class="prose">
          <%= article.body %>
        </div>
      </div>
    </div>
  </div>
<% end %>
